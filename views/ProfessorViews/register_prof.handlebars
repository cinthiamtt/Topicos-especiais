<title>Registro Professor</title>

<style type="text/css">
    body {
        background: url("/images/fulls/05.jpg");
        background-repeat: repeat, no-repeat !important;
    }

    #titulo {
        color: white !important;
        position: relative;
        text-align: center;
        font-size: xx-large;
    }

    label {
        color: black;
        font-weight: bold;
    }

    .hrzin{
        background: black !important;
    }
</style>

<h3 class="m-3" id="titulo"><strong>Cadastro Professor</strong></h3>
<div class="card m-4" >
    <div class="card-body">
        <form action="/prof/register/profs" method="POST">
            <label for="name">Nome:</label>
            <input type="text" name="name" class="form-control" placeholder="João Maria da Silva" required="true">
            <hr class="hrzin">
            <label for="cpf">CPF:</label>
            <input type="text" name="cpf" class="form-control" id="cpf" placeholder="123.456.789-10" required="true">
            <hr class="hrzin">
            <label for="cref">CREF:</label>
            <input type="text" name="cref" class="form-control" id="cref" placeholder="000000-A/MG" required="true">
            <hr class="hrzin">
            <label for="data_nasc">Data de Nascimento:</label>
            <input type="date" name="data_nasc" class="form-control" required="true">
            <hr class="hrzin">
            <label for="sexo">Sexo:</label>
            <select name="sexo" class="form-control">
                <option value="0">Selecione uma Opção...</option>
                <option value="Masculino">Masculino</option>
                <option value="Feminino">Feminino</option>
                <option value="Outros">Outros</option>
            </select>
            <hr class="hrzin">
            <label for="password">Senha:</label>
            <input type="password" name="password" class="form-control" required="true" placeholder="********">
            <br>
            <button class="btn btn-outline-success btn-block" type="submit" style="font-weight: bold;">Salvar</button>
            <br>
        </form>
        <a href="/prof/login"><button class="btn btn-outline-danger btn-block" style="font-weight: bold;">Cancelar</button></a>
    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js" type="text/javascript"></script>
<script src="/assets/js/jquery.mask.min.js" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function ($) {
        $('#cpf').mask('000.000.000-00');
    })
</script>