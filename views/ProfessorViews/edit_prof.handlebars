<title>Atualizar Professor</title>

<style type="text/css">
    body {
        background: url("/images/fulls/05.jpg");
        background-repeat: repeat, no-repeat !important;
    }

    #titulo {
        color: white !important;
        position: relative;
        text-align: center;
        font-size: xx-large;
    }

    label, .form-control {
        color: black;
        font-weight: bold;
    }

    .hrzin {
        background: black !important;
    }
</style>

<h3 class="m-3" id="titulo"><strong>Atualizar Professor</strong></h3>
<div class="card m-4">
    <div class="card-body">
        <form action="/prof/update/prof/{{prof.id}}?_method=PUT" method="POST">
            <input type="hidden" name="_method" value="PUT" />
            <label for="name">Nome:</label>
            <input type="text" name="name" class="form-control" value="{{prof.name}}">
            <hr class="hrzin">
            <label for="cpf">CPF:</label>
            <input type="text" name="cpf" class="form-control" id="cpf" value="{{prof.cpf}}">
            <hr class="hrzin">
            <label for="cref">CREF:</label>
            <input type="text" name="cref" class="form-control" id="cref" value="{{prof.cref}}">
            <hr class="hrzin">
            <label for="data_nasc">Data de Nascimento:</label>
            <input type="date" name="data_nasc" class="form-control" value="{{prof.data_nasc}}">
            <hr class="hrzin">
            <label for="sexo">Sexo:</label>
            <select name="sexo" class="form-control">
                <option value="">Selecione uma Opção...</option>
                <option value="Masculino">Masculino</option>
                <option value="Feminino">Feminino</option>
                <option value="Outros">Outros</option>
            </select>
            <hr class="hrzin">
            <label for="telefone">Telefone:</label>
            <input type="text" name="telefone" class="form-control" id="tel" value="{{prof.telefone}}">
            <hr class="hrzin">
            <label for="celular">Celular:</label>
            <input type="text" name="celular" class="form-control" id="cel" value="{{prof.celular}}">
            <hr class="hrzin">
            <label for="especializacao">Especialização:</label>
            <select name="especializacao" class="form-control">
                <option value="">Selecione uma Opção...</option>
                <option value="Vinyasa Flow Yoga">Vinyasa Flow Yoga</option>
                <option value="Hatha Yoga">Hatha Yoga</option>
                <option value="Ashtanga Yoga">Ashtanga Yoga</option>
            </select>
            <br>
            <button class="btn btn-outline-success btn-block " type="submit">Salvar</button>
            <br>
        </form>
        <a href="#back"><button class="btn btn-outline-danger btn-block">Cancelar</button></a>
    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js" type="text/javascript"></script>
<script src="/assets/js/jquery.mask.min.js" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function ($) {
        $('#cpf').mask('000.000.000-00');
        $('#cref').mask('000000-0/00');
        $('#cel').mask('(00)0 0000-0000');
        $('#tel').mask('(00) 0000-0000');
    })
</script>